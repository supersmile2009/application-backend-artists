<?php

$finder = PhpCsFixer\Finder::create()
    ->exclude('var')
    ->exclude('bin')
    ->exclude('vendor')
    ->in(__DIR__);
$config = PhpCsFixer\Config::create()
    ->setRules([
        '@Symfony' => true,
        '@DoctrineAnnotation' => true,
    ])
    ->setFinder($finder);

return $config;
